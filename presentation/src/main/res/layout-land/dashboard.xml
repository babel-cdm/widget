<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <!-- Guides -->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glHorizontalLandscapeDashboard1"
        android:layout_width="@dimen/guide_width"
        android:layout_height="@dimen/guide_height"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.333"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glHorizontalLandscapeDashboard2"
        android:layout_width="@dimen/guide_width"
        android:layout_height="@dimen/guide_height"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.666"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glVerticalLandscapeDashboard1"
        android:layout_width="@dimen/guide_width"
        android:layout_height="@dimen/guide_height"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.166"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glVerticalLandscapeDashboard2"
        android:layout_width="@dimen/guide_width"
        android:layout_height="@dimen/guide_height"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.333"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glVerticalLandscapeDashboard3"
        android:layout_width="@dimen/guide_width"
        android:layout_height="@dimen/guide_height"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glVerticalLandscapeDashboard4"
        android:layout_width="@dimen/guide_width"
        android:layout_height="@dimen/guide_height"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.666"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glVerticalLandscapeDashboard5"
        android:layout_width="@dimen/guide_width"
        android:layout_height="@dimen/guide_height"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.833"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>